<script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
<p>
  <strong>Title:</strong>
  <%= @video.title %>
</p>

<video
    id="my-video"
    class="video-js"
    controls
    preload="auto"
    width="640"
    height="264"
    poster="<%=  url_for(@video.thumbnail) %>"
    data-setup="{}"
  >
    <source src="<%=  url_for(@video.clip) %>" type="video/mp4" />
   
    </p>
  </video>

<p>
  <strong>Description:</strong>
  <%= @video.description %>
</p>

